    border: #F05725;
    width: 350px;
}


.event-card h1 {

    margin-left: 10px;
    margin-bottom: 0px;
}

.event-card p {
    text-align: left;
    font-size: 13px;

    padding: 10px;
    margin-right: 10px;
    line-height: 15px;

}

#card_text2 {
    position: absolute;
    display: flex;
    flex-direction: column;
    text-align: left;
    font-size: 12px;
    font-family: "Rubik", sans-serif;
    color: #F05725;
    top: 150px;
}

.event-card:hover {
    transform: scale(1.05);
}

.card_text1 button:hover {
    background-color: #F05725;
    border-radius: 25px;
    color: #f0f0f0;
    font-weight: bold;
    font-size: 20px;
    padding: 10px;
    margin-top: 7px;
    border: #F05725;
    transform: scale(0.95);
}
form {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 80%;
  max-width: 500px;
  margin: 20px auto;
